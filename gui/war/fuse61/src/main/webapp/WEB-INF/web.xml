<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >
<web-app>
  <display-name>BPM Console UI</display-name>

  <error-page>
    <error-code>403</error-code>
    <location>/403.html</location>
  </error-page>

  <listener>
    <listener-class>
      org.jboss.bpm.console.server.ConfigListener
    </listener-class>
  </listener>

  <filter>
    <filter-name>AuthenticationFilter</filter-name>
    <filter-class>org.picketlink.identity.federation.web.filters.SPFilter</filter-class>
    <init-param>
      <param-name>ROLES</param-name>
      <param-value>overlorduser</param-value>
    </init-param>
    <init-param>
      <param-name>IGNORE_SIGNATURES</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>*.html</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>PicketLinkAuthWrapperFilter</filter-name>
    <filter-class>org.overlord.commons.auth.filters.PicketLinkAuthWrapperFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>PicketLinkAuthWrapperFilter</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>
  
  <filter>
    <filter-name>PostAuthenticationRedirectFilter</filter-name>
    <filter-class>org.overlord.commons.gwt.server.filters.PostAuthenticationRedirectFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>PostAuthenticationRedirectFilter</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>HttpRequestThreadLocalFilter</filter-name>
    <filter-class>org.overlord.commons.auth.filters.HttpRequestThreadLocalFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>HttpRequestThreadLocalFilter</filter-name>
    <url-pattern>*</url-pattern>
  </filter-mapping>

  <filter>
    <filter-name>WelcomeFileFilter</filter-name>
    <filter-class>org.overlord.commons.gwt.server.filters.WelcomeFileFilter</filter-class>
    <init-param>
      <param-name>welcomeFiles</param-name>
      <param-value>app.html</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>WelcomeFileFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>RestProxy</servlet-name>
    <servlet-class>org.jboss.bpm.console.server.RestProxyServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>
  <servlet-mapping>
    <servlet-name>RestProxy</servlet-name>
    <url-pattern>/rs/*</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ErraiServlet</servlet-name>
    <servlet-class>org.jboss.errai.bus.server.servlet.DefaultBlockingServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>ErraiServlet</servlet-name>
    <url-pattern>*.erraiBus</url-pattern>
  </servlet-mapping>

</web-app>